[core]
	editor = vim
    autocrlf = input

[user]
	name = Mischback
	email = dev@mischback.de

[merge]
    ff = false

[color]
	ui = true

[color "status"]
    added = "green normal bold"
    changed = "red normal bold"
    untracked = "magenta normal bold"
    branch = "yellow normal bold"

[color "branch"]
    current = "yellow normal bold"
    local = "green normal dim"
    remote = "cyan normal dim"

[color "grep"]
    linenumber = "green normal dim"
    filename = "magenta normal dim"
    match = "red normal bold"

[alias]
s = status
m = merge
ca = commit -a
lg = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
k = log --oneline --graph --decorate --all
